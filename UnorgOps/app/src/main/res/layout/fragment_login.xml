<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_svg"
    tools:context=".views.LoginFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/edttxt_U_nameCardView"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="#549f84"
        app:cornerRadius="5dp"
        app:strokeColor="#11A374"
        app:strokeWidth="2dp"
        tools:layout_editor_absoluteX="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_txt_U_Name"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#549f84"
            android:fontFamily="@font/inter"
            android:hint="Enter UserName"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/txt_color_black"
            android:textSize="20dp"
            app:cornerRadius="5dp"
            app:strokeColor="#11A374"
            app:strokeWidth="3dp"
            app:layout_constraintLeft_toLeftOf="@+id/edttxt_U_nameCardView"
            app:layout_constraintRight_toRightOf="@+id/edttxt_U_nameCardView"
            app:layout_constraintTop_toTopOf="@+id/edttxt_U_nameCardView"
            app:layout_constraintBottom_toBottomOf="@+id/edttxt_U_nameCardView"
            android:elevation="20dp"/>

    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/edttxt_U_Password_CardView"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#549f84"
        app:cornerRadius="5dp"
        app:strokeColor="#11A374"
        app:strokeWidth="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edttxt_U_nameCardView">

    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edt_txt_U_Password"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="#549f84"
        android:fontFamily="@font/inter"
        android:hint="Enter password"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/txt_color_black"
        android:textSize="20dp"
        app:cornerRadius="5dp"
        app:strokeColor="#11A374"
        app:strokeWidth="2dp"
      app:layout_constraintLeft_toLeftOf="@id/edttxt_U_Password_CardView"
        app:layout_constraintRight_toRightOf="@id/edttxt_U_Password_CardView"
        app:layout_constraintTop_toTopOf="@id/edttxt_U_Password_CardView"
        app:layout_constraintBottom_toBottomOf="@id/edttxt_U_Password_CardView"
        android:elevation="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/textButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_login_color"
        android:paddingHorizontal="60dp"
        android:text="LOGIN"
        android:textColor="@color/white"
        app:cornerRadius="5dp"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="275dp"
        app:layout_constraintTop_toBottomOf="@id/edttxt_U_Password_CardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>