<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="8dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/avatar_url"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="8dp">
            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="id"/>


            <TextView
                android:id="@+id/events_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="avatar_url"/>
            <TextView
                android:id="@+id/followers_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="avatar_url"/>
            <TextView
                android:id="@+id/following_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="avatar_url"/>
            <TextView
                android:id="@+id/gists_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="gists_url"/>
            <TextView
                android:id="@+id/gravatar_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="gravatar_id"/>

            <TextView
                android:id="@+id/html_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="html_url"/>

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="login"/>
            <TextView
                android:id="@+id/node_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="node_id"/>
            <TextView
                android:id="@+id/organizations_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="organizations_url"/>
            <TextView
                android:id="@+id/received_events_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="received_events_url"/>

            <TextView
                android:id="@+id/repos_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="repos_url"/>
            <TextView
                android:id="@+id/site_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="site_admin"/>
            <TextView
                android:id="@+id/starred_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="starred_url"/>
            <TextView
                android:id="@+id/subscriptions_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="subscriptions_url"/>
            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="type"/>
            <TextView
                android:id="@+id/url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="url"/>


        </LinearLayout>
        </ScrollView>
    </LinearLayout>
    
</LinearLayout>
</androidx.cardview.widget.CardView>

